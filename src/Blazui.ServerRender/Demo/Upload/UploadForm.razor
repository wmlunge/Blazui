@inherits UploadFormBase
@using  Blazui.ServerRender.Demo.Form
<BForm Style="width:400px;" @ref="demoForm" Value="value">
    <BFormItem TValue="string" Label="活动名称" Name="@nameof(UploadActivity.Name)" IsRequired="true">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="Area" Label="活动区域" Name="@nameof(UploadActivity.Area)" IsRequired="true">
        <BSelect TValue="Area" Placeholder="请选择活动区域">
        </BSelect>
    </BFormItem>
    <BFormItem TValue="IFileModel[]" Label="审批文件" Name="@nameof(UploadActivity.Files)" IsRequired="true">
        <BUpload Url="/api/test/upload">
        </BUpload>
    </BFormItem>
    <BFormItem TValue="IFileModel[]" Label="场景预览" Name="@nameof(UploadActivity.Previews)">
        <BUpload Url="/api/test/upload" UploadType="UploadType.Image">
        </BUpload>
    </BFormItem>
    <BFormActionItem>
        <BButton Type="@ButtonType.Primary" OnClick="e=>Submit()">立即创建</BButton>
        <BButton OnClick="e=>Reset()">重置</BButton>
    </BFormActionItem>
</BForm>